#!/usr/bin/env bash
# Rewrite server blocks
sudo sed -ie 's/ ipv6only=on//' /etc/nginx/sites-available/default
sudo sed -ie 's/server_name localhost/server_name _/' /etc/nginx/sites-available/default
sudo service nginx stop
sudo sed -ie 's/ENABLED=1//' /etc/default/nginx
sudo /etc/init.d/nginx start
